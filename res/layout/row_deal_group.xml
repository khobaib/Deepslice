    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/b_customize"
        android:layout_toRightOf="@+id/imageView1"
        android:maxLines="3"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_customize"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/box_red"
        android:text="Customize"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_tick_customized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b_customize"
        android:layout_alignRight="@+id/b_customize"
        android:layout_alignTop="@+id/b_customize"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:src="@drawable/tick"
        android:visibility="gone" />

</RelativeLayout>