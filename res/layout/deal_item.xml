<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rede_box1" >

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:scaleType="fitXY"
            android:src="@drawable/sides_icon" />

    <TextView
            android:id="@+id/textView1"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView1"
            android:maxLines="3"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="15dip"
            android:textStyle="bold" android:layout_toLeftOf="@+id/imageView"
            android:layout_alignBottom="@+id/imageView1" android:layout_alignTop="@+id/imageView1"
            android:gravity="center_vertical" android:lines="2" android:linksClickable="false"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:background="@drawable/list_arrow" android:layout_marginRight="5dp"/>

</RelativeLayout>