<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rede_box1" >

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:scaleType="fitXY"
            android:src="@drawable/sides_icon" />

    <TextView
            android:id="@+id/textView1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView1"
            android:maxLines="3"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="15dip"
            android:textStyle="bold" android:layout_alignTop="@+id/imageView1"
            android:layout_alignBottom="@+id/imageView1" android:gravity="center_vertical"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6712kj"
            android:textColor="#ffff00"
            android:textSize="14dip"
            android:layout_alignParentLeft="false"
            android:layout_toRightOf="@+id/textView1" android:layout_centerVertical="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewArrow" android:layout_alignParentLeft="false"
            android:layout_centerVertical="true" android:background="@drawable/list_arrow"
            android:layout_toRightOf="@+id/textView2" android:layout_alignParentRight="false"
            android:layout_marginLeft="10dp" android:visibility="visible"/>

</RelativeLayout>